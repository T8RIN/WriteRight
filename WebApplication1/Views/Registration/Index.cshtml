@model WebApplication1.Models.User

@{
    ViewData["Title"] = "Регистрация";
}

<div class="content-box">
    <h1 class="display-4">РЕГИСТРАЦИЯ</h1>
    <form asp-action="Index" method="post" class="text-start">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Name">ФИО</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Иван иванов">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email">ПОЧТА</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="apupa@amogus.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="*****">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">произвести создание</button>
        </div>
    </form>
    <div class="mt-3">
        <p>Уже есть аккаунт? <a asp-action="Index" asp-controller="Login" style="color: #7B2A99;">Войти</a></p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}