@{
    ViewData["Title"] = "Регистрация";
}

<div class="content-box">
    <h1 class="display-4">РЕГИСТРАЦИЯ</h1>
    <form class="text-start">
        <div class="form-group mb-3">
            <label for="fullName">ФИО</label>
            <input type="text" class="form-control" id="fullName" placeholder="Иван иванов">
        </div>
        <div class="form-group mb-3">
            <label for="email">ПОЧТА</label>
            <input type="email" class="form-control" id="email" placeholder="apupa@amogus.com">
        </div>
        <div class="form-group mb-4">
            <label for="password">Пароль</label>
            <input type="password" class="form-control" id="password" placeholder="*****">
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">произвести создание</button>
        </div>
    </form>
</div> 