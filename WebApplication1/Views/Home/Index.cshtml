@{
    ViewData["Title"] = "Главная";
}

<style>
    .text-purple {
        color: #9932CC !important;
    }
    .btn-purple {
        background-color: #9932CC;
        border-color: #9932CC;
        color: white;
    }
    .btn-purple:hover {
        background-color: #7B2A99;
        border-color: #7B2A99;
    }
</style>

<div class="container-fluid bg-dark text-white text-center py-5 my-5 shadow-lg rounded-3">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <h1 class="display-3 mb-4">Добро пожаловать, <span class="text-purple">@User.Identity.Name</span>!</h1>
        <p class="lead">
            Ваш ключ к совершенству в русском языке. <br/>
            Продолжайте свой путь к грамотности!
        </p>
        <div class="mt-4">
            <a href="/Courses" class="btn btn-lg btn-purple">
                <i class="fas fa-graduation-cap me-2"></i>Начать учиться
            </a>
        </div>
    }
    else
    {
        <h1 class="display-3 mb-4">Добро пожаловать в <span class="text-purple">WriteRight</span>!</h1>
        <p class="lead">
            Ваш ключ к совершенству в русском языке. <br/>
            Начните свой путь к грамотности уже сегодня!
        </p>
        <div class="mt-4">
            <a href="/Registration" class="btn btn-lg btn-purple me-3">
                <i class="fas fa-user-plus me-2"></i>Начать бесплатно
            </a>
            <a href="/Login" class="btn btn-lg btn-purple">
                <i class="fas fa-sign-in-alt me-2"></i>Войти
            </a>
        </div>
    }
</div>
