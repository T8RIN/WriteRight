@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewData["Title"] = "Курсы";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-5 text-purple">Наши Курсы</h1>

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm course-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-purple">@course.Title</h5>
                        <p class="card-text flex-grow-1">@course.Description</p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary mt-3 w-100 btn-purple">
                                Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-purple {
        color: #9932CC !important; /* DarkOrchid */
    }
    .btn-purple {
        background-color: #9932CC;
        border-color: #9932CC;
        color: white;
    }
    .btn-purple:hover {
        background-color: #7B2A99;
        border-color: #7B2A99;
    }
    .course-card {
        border: none; /* Убираем стандартную границу карточки */
    }
    .course-card .card-body {
        border: 1px solid #9932CC; /* Добавляем фиолетовую границу к телу карточки */
        border-radius: .25rem; /* Скругляем углы */
    }
</style> 