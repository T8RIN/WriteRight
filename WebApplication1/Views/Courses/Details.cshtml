@model WebApplication1.Models.Course

@{
    ViewData["Title"] = @Model.Title;
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded">
        <div class="card-body">
            <h1 class="card-title text-purple mb-4">@Model.Title</h1>
            <p class="card-text lead">@Model.Description</p>
            <hr class="my-4">
            <div class="course-content">
                @Html.Raw(Model.Content)
            </div>

            <div class="mt-5 text-center">
                @if (Model.TestQuestions.Any())
                {
                    <a asp-controller="Test" asp-action="Index" asp-route-courseId="@Model.Id" class="btn btn-lg btn-purple">
                        <i class="fas fa-pencil-alt me-2"></i>Пройти тест
                    </a>
                }
                else
                {
                    <p class="text-muted">Для этого курса пока нет тестов.</p>
                }
                <a asp-action="Index" class="btn btn-lg btn-outline-purple ms-3">
                    <i class="fas fa-arrow-left me-2"></i>Назад к курсам
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #9932CC !important; /* DarkOrchid */
    }
    .btn-purple {
        background-color: #9932CC;
        border-color: #9932CC;
        color: white;
    }
    .btn-purple:hover {
        background-color: #7B2A99;
        border-color: #7B2A99;
    }
    .btn-outline-purple {
        color: #9932CC;
        border-color: #9932CC;
    }
    .btn-outline-purple:hover {
        background-color: #9932CC;
        color: white;
    }
    .course-content ul {
        list-style-type: disc; /* Bullet points */
        padding-left: 20px; /* Indent the list */
    }
    .card-text.lead {
        color: #212529 !important; /* Темный цвет для контраста на белом фоне */
    }
</style> 